<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.develop.vsdev.GoogleSignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_gradient"></RelativeLayout>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="420dp"


        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:elevation="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/phone_number_met"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="81dp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="10"
                app:met_autoValidate="true"
                app:met_baseColor="@color/material_blue"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelText="Phone Number"
                app:met_floatingLabelTextColor="@color/material_blue"
                app:met_floatingLabelTextSize="15sp"
                app:met_maxCharacters="10"
                app:met_primaryColor="@color/material_blue"
                app:met_textColor="@color/material_blue"
                app:met_underlineColor="@color/material_blue" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_number_met"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:background="@drawable/circularbutton"
                android:gravity="center"
                android:text="submit"
                android:textColor="@color/white" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>
